<UserControl x:Class="Theseus.WPF.Code.Views.BrowseMazesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:canvases="clr-namespace:Theseus.WPF.Code.Views.Components.MazeCanvases"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="BrowseMazesGrid" Background="WhiteSmoke" Margin="40 40 40 40" SizeChanged="Grid_SizeChanged" Loaded="Grid_Loaded" >
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0 10 0 10">
            <ListBox ItemsSource="{Binding MazesWithSolution}" Name="MazesWithSolutionListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <canvases:MazeWithSolutionCanvasView Width="400" Height="150"  Margin="0 10 0 10" x:Name="MazeCanvas"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </ScrollViewer>
    </Grid>
</UserControl>
